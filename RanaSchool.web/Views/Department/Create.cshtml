
@{
    ViewBag.Title = "Create";
}
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Create Department</h2>
                            <span>Please Enter Following Details</span>
                        </div>
                        <div class="login-form">

                            <form id="createDepartment">
                                <input name="Name" placeholder="Name" />
                                <input name="ID" type="hidden" placeholder="ID" />
                                <input name="Admin" placeholder="Added By" />
                                <div class="button-box">
                                    <button class="default-btn" id="saveBtn" type="button">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#saveBtn").click(function () {
        $.ajax({
            type: "POST",
            url: "/Department/Create",
            data: $("#createDepartment").serialize()
        })
        .done(function (response) {
            $("#tableContainer").html(response);
            $("#actionContainer").html("")
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("fail");
        });
    });
</script>
